.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:authorizations, :index)
      %li=link_to pat(:new), url(:authorizations, :new)
      %li.active=link_to pat(:edit), url(:authorizations, :edit, :id => @authorization.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:authorization)
    .inner
      -form_for :authorization, url(:authorizations, :update, :id => @authorization.id), :method => :put, :class => :form do |f|
        =partial "authorizations/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")