.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:money, :index)
      %li=link_to pat(:new), url(:money, :new)
      %li.active=link_to pat(:edit), url(:money, :edit, :id => @money.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:money)
    .inner
      -form_for :money, url(:money, :update, :id => @money.id), :method => :put, :class => :form do |f|
        =partial "money/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")