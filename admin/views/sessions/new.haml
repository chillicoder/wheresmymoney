!!! Strict
%html{:lang => "en", :xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}
    %title
      =I18n.t("application_name")
    =stylesheet_link_tag :base, "themes/default/style"
  %body
    #container
      #box
        %h1
          =I18n.t("application_name")
        #block-login.block
          %h2 
            =I18n.t("login_box")

          .content.login
            %h3
              %a{:title => "Facebook", :href => "/auth/facebook"}
                =I18n.t("login_facebook")
            %h3
              %a{:title => "Twitter", :href => "/auth/twitter"}
                =I18n.t("login_twitter")
            %h3
              %a{:title => "Twitter", :href => "/auth/open_id"}
                =I18n.t("login_openid")
            %h3
              %a{:title => "Twitter", :href => "/auth/google_apps"}
                =I18n.t("login_googleapps")

            %h3
              =I18n.t("login_local")
            .flash=[:error, :warning, :notice].map { |type| flash_tag(type, :class => "message #{type}") }.join
            -form_tag(url(:sessions, :create), :class => 'form login') do
              .group.wat-cf
                .left
                  %label.label.right
                    =I18n.t("login")
                .right=text_field_tag :email, :value => params[:email], :class => :text_field
              .group.wat-cf
                .left
                  %label.label.right
                    =I18n.t("password")
                .right=password_field_tag :password, :value => params[:password], :class => :text_field
              .group.navform.wat-cf
                .right=submit_tag(I18n.t("sign_in"), :class => :button)
